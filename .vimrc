set ts=2
set expandtab
set shiftwidth=2
set softtabstop=2
set t_Co=256
set number
set expandtab
set cindent
syntax enable
set background=dark
colorscheme solarized

filetype indent on

set hlsearch                    " highlight matches
set incsearch                   " incremental searching
set ignorecase                  " searches are case insensitive...
set smartcase                   " ... unless they contain at least one capital letter 

set laststatus=2

  inoremap  <Up>     <NOP>
  inoremap  <Down>   <NOP>
  inoremap  <Left>   <NOP>
  inoremap  <Right>  <NOP>
  noremap   <Up>     <NOP>
  noremap   <Down>   <NOP>
  noremap   <Left>   <NOP>
  noremap   <Right>  <NOP>
